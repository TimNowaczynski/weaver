<resources>

    <!-- modern application theme. -->
    <style name="AppThemeModern" parent="Theme.AppCompat.Light">
        <item name="titleTextColor">@color/white</item>
        <item name="colorPrimary">@color/modernPrimaryColor</item>
        <item name="colorPrimaryDark">@color/modernPrimaryDarkColor</item>
        <item name="colorAccent">@color/modernSecondaryColor</item>
        <item name="actionOverflowButtonStyle">@style/AppThemeModern.ActionOverflowButton</item>
    </style>

    <style name="AppThemeModern.NoActionBar" parent="AppThemeModern">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeModern.ActionOverflowButton">
        <item name="srcCompat">@drawable/ic_settings</item>
    </style>

    <style name="AppThemeModern.EditTextInputLayout">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- fantasy application theme. -->

    <style name="AppThemeFantasy" parent="Theme.AppCompat.Light">
        <item name="titleTextColor">@color/pitch_black</item>
        <item name="colorPrimary">@color/fantasyPrimaryColor</item>
        <item name="colorPrimaryDark">@color/fantasyPrimaryDarkColor</item>
        <item name="colorAccent">@color/fantasySecondaryColor</item>
        <item name="actionOverflowButtonStyle">@style/AppThemeFantasy.ActionOverflowButton</item>
    </style>

    <style name="AppThemeFantasy.NoActionBar" parent="AppThemeModern">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFantasy.ActionOverflowButton">
        <item name="srcCompat">@drawable/ic_settings</item>
    </style>

    <style name="AppThemeFantasy.EditTextInputLayout">
        <!-- TODO: define -->
    </style>

</resources>
