<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/pitch_black"
    android:minHeight="48dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:context=".players.PlayerCharacterListActivity">

    <ImageView
        android:id="@+id/player_character_list_character_icon"
        android:src="@drawable/ic_character_jcon_simple"
        android:contentDescription="@string/cd_manage_player_characters"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/player_character_list_name_text"
        tools:text="Character Name (Player Name)"
        tools:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_character_list_character_icon"
        app:layout_constraintEnd_toStartOf="@+id/player_character_list_delete_character"
        android:layout_marginEnd="4dp"
        android:gravity="start|center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/player_character_list_delete_character"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/activity_player_character_list_delete_character_cd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
