<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/pitch_black"
    android:id="@+id/campaign_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/campaign_list_item_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/campaign_list_item_edit"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/campaign_list_item_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/campaign_list_item_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/campaign_list_item_edit"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/campaign_list_item_synopsis"
        app:layout_constraintTop_toBottomOf="@id/campaign_list_item_edit"
        app:layout_constraintStart_toEndOf="@+id/campaign_list_item_view"
        app:layout_constraintEnd_toStartOf="@id/campaign_list_item_manage_player_characters"
        android:text="@string/campaign_list_item_synopsis"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/campaign_list_item_manage_player_characters"
        app:layout_constraintTop_toBottomOf="@id/campaign_list_item_synopsis"
        app:layout_constraintStart_toEndOf="@+id/campaign_list_item_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/campaign_list_item_players"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
