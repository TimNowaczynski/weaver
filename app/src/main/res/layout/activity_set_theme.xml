<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="themeDisplayObject"
            type="de.quarian.weaver.theming.ThemeDisplayObject" />
    </data>

    <LinearLayout
        tools:background="@color/pitch_black"
        android:background="@{themeDisplayObject.backgroundColor}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".theming.SetThemeActivity">

        <TextView
            android:text="Set Theme"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
