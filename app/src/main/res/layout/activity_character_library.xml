<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pitch_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.quarian.weaver.characters.CharacterLibraryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/modernPrimaryColor"
        app:titleTextColor="@color/white"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="CHARACTERS"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/list_of_characters_view_character"
        android:text="VIEW CHARACTER"
        android:onClick="onViewCharacterClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/list_of_characters_new_character"
        android:text="NEW CHARACTER"
        android:onClick="onAddCharacterClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
